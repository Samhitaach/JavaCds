public class ConsecutiveFinder {

    /**
     * Returns the length of the longest run of consecutive integers
     * in the given array, in the order they appear.
     */
    public static int longestConsecutiveRun(int[] arr) {
        if (arr == null || arr.length == 0) {
            return 0;
        }

        int maxRun = 1;
        int currentRun = 1;

        for (int i = 1; i < arr.length; i++) {
            if (arr[i] == arr[i - 1] + 1) {
                // extend the current run
                currentRun++;
            } else {
                // record and reset
                maxRun = Math.max(maxRun, currentRun);
                currentRun = 1;
            }
        }

        // final check in case the longest run ends at the last element
        return Math.max(maxRun, currentRun);
    }

    public static void main(String[] args) {
        int[] input = {1, 2, 3,4,5, 6, 7, 8, 9, 5, 6};
        System.out.println(longestConsecutiveRun(input));  // prints 4
    }
}
